@model IEnumerable<PropertyInventorySystem.Models.PropertyDashboardViewModel>
@{
    ViewData["Title"] = "Home Page";
}
@{
    int counter = 1;
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
