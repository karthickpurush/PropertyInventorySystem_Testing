@model PropertyInventorySystem.Models.SoldDashboardViewModel

@{
    ViewData["Title"] = "Property Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3>@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Details for Property ID: @Model.PropertyId</h5>
                    <p class="card-text"><strong>Owner:</strong> @Model.Owner</p>
                    <p class="card-text"><strong>Asking Price EUR:</strong> @Model.AskingPriceEUR</p>
                    <p class="card-text"><strong>Contact Number:</strong> @Model.ContactNumber</p>
                    <p class="card-text"><strong>Email:</strong> @Model.Email</p>
                    <p class="card-text"><strong>Date Of Purchase:</strong> @Model.DateOfPurchase.ToShortDateString()</p>
                    <p class="card-text"><strong>Effective Till:</strong> @Model.EffectiveTill.ToShortDateString()</p>
                    <p class="card-text"><strong>Sold At Price EUR:</strong> @Model.SoldAtPriceEUR</p>
                    <!-- Add other property details as needed -->
                </div>
                <div class="card-footer text-muted">
                    <a href="@Url.Action("Index")" class="btn btn-primary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
